{% extends 'base.html.twig' %}

{% block title "Tous les articles" %}

{% block body %}
    <h1>BLOG</h1>
    <ul>
        {% for article in articles %}

        <li>
            <a href="{{ path('article.show', {slug: article.slug}) }}">{{ article.title }}</a>
        </li>


        {% endfor %}

    </ul>

    <p>
        <a href="{{ path('article.new')}}">Cr√©er un article</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.status }}</td>
                <td class="d-flex gap-1">
                    <a href="{{ path('article.show', {slug: article.slug}) }}">Consulter</a>

                    <a href="{{ path('article.edit', {id: article.id}) }}">Editer</a>

                    <form action="{{ path('article.delete', {id: article.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>


    </table>
    {% endblock %}