{% extends 'base.html.twig' %}

{% block body %}
   <div class="container">
      <h2>Ajouter un article</h2>

      {{ include('partials/_flash_messages.html.twig') }}

      <form method="post" action="{{ path('article.new') }}">

         {{ form_start(form) }}
             {{ form_row(form.title) }}
             {{ form_row(form.slug) }}
             {{ form_row(form.content) }}
             {{ form_row(form.category) }}
             {{ form_row(form.published_at) }}
             {{ form_row(form.save, { 'label': 'Cr√©er l\'article' }) }}
             {{ form_row(form._token) }}

         {{ form_end(form) }}
     </form>

   </div>

{% endblock %}