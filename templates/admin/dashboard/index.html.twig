{% extends 'admin_base.html.twig' %}

{% block title %}Dashboard Admin | Code by Aurore{% endblock %}

{% block body %}
<h1 class="admin-dashboard-title">Dashboard CodeByAurore</h1>

<section class="dashboard-section">
    <div class="container">
        <div class="dashboard-grid">
            <div class="stat-widget">
                <div class="stat-number">{{ articlesCount }}</div>
                <div class="stat-label">Articles publiés</div>
            </div>
            <div class="stat-widget">
                <div class="stat-number">{{ commentsCount }}</div>
                <div class="stat-label">Commentaires laissés</div>
            </div>
            <div class="stat-widget">
                <div class="stat-number">{{ messagesCount }}</div>
                <div class="stat-label">Messages reçus</div>
            </div>
        </div>
    </div>
</section>

<section class="dashboard-section">
    <h2>Commentaires en attente</h2>
    <table class="dashboard-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Article</th>
                <th>Status</th>
                <th>Nom & Email</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.publishedAt | date("Y-m-d H:i") }}</td>
                    <td><a href="{{ path('article.show', { 'slug': comment.article.slug }) }}">{{ comment.article.title }}</a></td>
                    <td>
                        <span class="badge 
                            {% if comment.status == 'en attente' %}badge--pending{% endif %}">
                            {{ comment.status }}
                        </span>
                    </td>
                    <td><strong>{{ comment.username }}</strong><br><small>{{ comment.email }}</small></td>
                    <td>{{ comment.comment | slice(0, 50) }}...</td>
                    <td>
                        <a href="{{ path('admin.comment.validate', { 'id': comment.id }) }}" class="btn btn--validate">Valider</a>
                        <a href="{{ path('admin.comment.refuse', { 'id': comment.id }) }}" class="btn btn--refuse">Refuser</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun commentaire en attente.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
<section class="dashboard-section">
    <h2>Derniers articles publiés</h2>
    <table class="dashboard-table">
        <thead>
            <tr>
                <th>Date de publication</th>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.publishedAt | date("d-m-Y") }}</td>
                    <td><a href="{{ path('article.show', { 'slug': article.slug }) }}">{{ article.title }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">Aucun article publié récemment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>

<section class="dashboard-section">
    <h2>Derniers messages reçus</h2>
    <table class="dashboard-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Nom & Email</th>
                <th>Sujet</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.createdAt | date("d-m-Y") }}</td>
                    <td><strong>{{ message.firstname }} {{ message.lastname }}</strong><br><small>{{ message.email }}</small></td>
                    <td>{{ message.subject }}...</td>
                    <td>{{ message.content | slice(0, 50) }}...</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun message reçu récemment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>


{% endblock %}
