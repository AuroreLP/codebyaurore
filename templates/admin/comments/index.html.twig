{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des commentaires | Code by Aurore{% endblock %}

{% block body %}
<h1>Commentaires reçus</h1>

<table class="comment-table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Article</th>
            <th>Status</th>
            <th>Nom & Email</th>
            <th>Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.publishedAt | date("Y-m-d H:i") }}</td>
                <td>
                    <a href="{{ path('article.show', { 'slug': comment.article.slug }) }}">
                        {{ comment.article.title }}
                    </a>
                </td>
                <td>
                    <span class="badge 
                        {% if comment.status == 'en attente' %}badge--pending
                        {% elseif comment.status == 'validé' %}badge--validated
                        {% elseif comment.status == 'refusé' %}badge--delete
                        {% endif %}">
                        {{ comment.status }}
                    </span>
                </td>
                <td>
                    <strong>{{ comment.username }}</strong><br>
                    <small>{{ comment.email }}</small>
                </td>
                <td>{{ comment.comment | slice(0, 80) }}{% if comment.comment|length > 80 %}...{% endif %}</td>
                <td>
                    {% if comment.status == 'en attente' %}
                        <a href="{{ path('admin.comment.validate', { 'id': comment.id }) }}"
                           class="button--light-green">Valider</a>
                        <a href="{{ path('admin.comment.refuse', { 'id': comment.id }) }}"
                           class="button--delete"
                           onclick="return confirm('Refuser ce commentaire ?');">Refuser</a>
                    {% else %}
                        <span class="no-action">-</span>
                    {% endif %}
                </td>
            </tr>
                    {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun commentaire trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}