{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des commentaires | Code by Aurore{% endblock %}

{% block body %}
<h1>Commentaires reçus</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Article</th>
            <th>Message</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.publishedAt | date("Y-m-d") }}</td>
                <td>{{ comment.username }}</td>
                <td>{{ comment.email }}</td>
                <td><a href="{{ path('article.show', { 'slug': comment.article.slug }) }}">{{ comment.article.title }}</a></td>
                <td>{{ comment.comment | slice(0, 50) }}...</td> <!-- Affiche un extrait du message -->
                <td>{{ comment.status }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('comment.edit', { 'id': comment.id }) }}">Éditer</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('comment.delete', { 'id': comment.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}