{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des messages | Code by Aurore{% endblock %}

{% block body %}
<h1>Messages reçus</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Objet</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        {% for message in messages %}
            <tr>
                <td data-cell="Date">{{ message.createdAt | date("Y-m-d") }}</td>
                <td data-cell="Nom">{{ message.lastname }}</td>
                <td data-cell="Prénom">{{ message.firstname }}</td>
                <td data-cell="Téléphone">{{ message.phone }}</td>
                <td data-cell="Email">{{ message.email }}</td>
                <td data-cell="Sujet">{{ message.subject }}</td>
                <td data-cell="Action"><a class="button--light-green" href="{{ path('admin.message.show', { id: message.id }) }}">Voir le message</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}


